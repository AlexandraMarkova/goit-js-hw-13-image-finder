
<div class="row row-cols-2 row-cols-md-4 g-4">
{{#each this}}
    <li class="list">
    <div class="col" >
        <div class="card ">
    <img class="card-img-top" src="{{webformatURL}}" data-source="{{largeImageURL}}" alt="images" width="250px" height="200px"/>

    <div class="card-body d-flex justify-content-evenly">
        <p class="stats-item">
            <i class="material-icons">thumb_up</i>
            {{likes}}
        </p>
        <p class="stats-item">
            <i class="material-icons">visibility</i>
            {{views}}
        </p>
        <p class="stats-item">
            <i class="material-icons">comment</i>
            {{comments}}
        </p>
        <p class="stats-item">
            <i class="material-icons">cloud_download</i>
            {{downloads}}
        </p>
    </div>
    </div>
    </div>
    </li>
   {{/each}} 
</div>
